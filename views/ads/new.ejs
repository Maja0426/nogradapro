<% include ../partials/header %>

<div class="container-fluid text-center log-bg">
  <div class="">
<form action="/ads" method="POST" enctype="multipart/form-data">

      <div class="form-row mt-ads">
        <div class="form-group col-sm-6 mx-auto">
          <select class="custom-select font-weight-bold" name="ads[mainCategory]">
            <option value="Kínál" selected>Kínál</option>
            <option value="Keres">Keres</option>
          </select>
        </div>
      </div>


      <div class="form-group col-sm-6 mx-auto">
        <input class="form-control" type="text" name="ads[title]" placeholder="hirdetés címe, max. 70 karakter" maxlength="70" required autofocus>
      </div>

      <div class="form-group col-sm-6 mx-auto">
        <input class="form-control" type="text" name="ads[price]" placeholder="ár">
      </div>

      <div class="form-group col-sm-6 mx-auto">
        <input class="form-control" type="text" name="ads[city]" placeholder="település" required>
      </div>

      <div class="form-group col-sm-6 mx-auto">
        <input class="form-control" type="text" name="ads[phone]" placeholder="tel. pl.: +36301234567">
      </div>

        <div class="form-group">
          <h6>Kategória:</h6>
          <div class="form-group col-sm-6 mx-auto">
          <select class="custom-select font-weight-bold" name="ads[category]" required>
            <option value="Állás">Állás</option>
            <option value="Ingatlan">Ingatlan</option>
            <option value="Szolgáltatás">Szolgáltatás</option>
            <option value="Műszaki">Műszaki cikk</option>
            <option value="Oktatás">Oktatás</option>
            <option value="Jármű">Jármű</option>
            <option value="Egyéb" selected>Egyéb</option>
          </select>
        </div>
        </div>

      <div class="form-group col-sm-6 mx-auto">
        <div class="custom-file">
          <label for="image" class="custom-file-label text-left"><i class="fas fa-image"></i> Képfeltöltés</label>
<input type="file" class="custom-file-input" id="image" value="https://res.cloudinary.com/maja0426/image/upload/v1550587836/Aprohirdetes/NoImageFound.png"
  name="image" accept="image/*">
        </div>
      </div>

      <div class="form-group col-sm-6 mx-auto">
      <textarea id="" rows="5" class="form-control" placeholder="Hirdetés szövege..." name="ads[description]" required></textarea>

        </div>
      <button class="btn btn-primary">Hirdetés feladása</button>
      <a class="btn btn-md btn-dark" href="/ads">Vissza</a>
    </form>
  </div>

</div>


<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
  crossorigin="anonymous"></script>
