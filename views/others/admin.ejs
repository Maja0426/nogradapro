<% include ../partials/header %>

<div class="container-fluid main-content admin-page">

  <div class="row mt-5">
    <div class="col-lg-4 col-sm-6 mb-5">
      <div class="text-center">
        <h5 class="text-center font-weight-bold bg-info text-light p-3">Regisztrált felhasználók:
          <span class="badge badge-light">
            <%= users.length %></span>
        </h5>
      </div>
      <ul class="list-group">
        <% users.forEach(function(user) { %>
        <li class="list-group-item">
          <p>
            <a href="/user/<%= user._id %>" class="btn btn-block btn-primary">
              <%= user.username %></a></p>
          <p class=""><b>REG.:</b>
            <%= moment(user.userCreated).format('YYYY. MMMM D. HH:MM') %>
          </p>
          <p class=""><b>EMAIL: </b>
            <a href="mailto:<%= user.email %>">
              <%= user.email %></a>
          </p>
          <div class="">
            <form class="" action="/user/<%= user._id %>?_method=DELETE" method="POST">
              <button class="btn btn-sm btn-danger">Felhasználó törlése</button>
              <input class="" type="checkbox" class="form-check-input" required>
            </form>
          </div>
        </li>
        <% }) %>
      </ul>
    </div>


    <div class="col-lg-8 col-sm-6">
      <div class="text-center">
        <h5 class="font-weight-bold bg-info text-light p-3">Hirdetések:
          <span class="badge badge-light">
            <%= ads.length %></span>
        </h5>
      </div>

      <% ads.forEach(function(ad) { %>
      <div class="card mb-3">
        <div class="row no-gutters">
          <div class="col-lg-3">
            <img src="<%= ad.image %>" class="card-img" alt="Ad's">
             <div class="text-center my-2">
            <form class="" action="/ads/<%= ad._id %>?_method=DELETE" method="POST">
            <button class="btn btn-block btn-dark">Hirdetés törlése</button>
            <input class="ml-2" type="checkbox" class="form-check-input" required>
          </form>
          </div>
          </div>
          <div class="col-lg-9">
            <div class="card-body">
              <h5 class="card-title"><%= ad.author.username %></h5>
              <p class="card-text"><b>Hirdetés: </b><a href="/ads/<%= ad._id %>"><%= ad.title %></a>
          </p>
              <span class="card-text"><small class="text-muted"><i class="fas fa-clock"></i> Feladva: <%= moment(ad.createdAt).format('YYYY. MMMM D. HH:MM') %></small></span><br>
              <span class="card-text"><small class="text-muted"><i class="fas fa-stopwatch"></i> Módosítva: <%= moment(ad.lastModifiedAt).format('YYYY. MMMM D. HH:MM') %></small></span>
            </div>
          </div>
        </div>
      </div>
      <% }) %>

